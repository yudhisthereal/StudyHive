<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpCourseActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="345dp"
        android:layout_height="138dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/purple_500"
        app:cardCornerRadius="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView" />

        <TextView
            android:id="@+id/tv_judulcourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Course"
            android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="45dp"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>

    <TextView
    android:id="@+id/tv_tanggalmulai"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/cv"
    app:layout_constraintStart_toStartOf="parent"
    android:text="Tanggal Mulai: "
    android:textSize="15sp"
    android:layout_marginStart="40dp"
    android:layout_marginTop="10dp"
    />

    <TextView
        android:id="@+id/tv_startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cv"
        app:layout_constraintStart_toEndOf="@id/tv_tanggalmulai"
        android:text="Tanggal"
        android:textSize="15sp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_tanggalSelesai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_tanggalmulai"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Tanggal Selesai: "
        android:textSize="15sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tv_endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_tanggalmulai"
        app:layout_constraintStart_toEndOf="@id/tv_tanggalSelesai"
        android:text="Tanggal"
        android:textSize="15sp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="Alamat : Indonesia"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tanggalSelesai" />

    <TextView
        android:id="@+id/tv_kuota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        android:text="Kuota : 100"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv" />
    <TextView
        android:id="@+id/tv_pilih_partisipan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih partisipanmu"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_alamat"/>

    <CheckBox
        android:id="@+id/partisipan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:checked="false"
        android:enabled="false"
        android:text="Partisipan1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pilih_partisipan" />

    <CheckBox
        android:id="@+id/partisipan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:enabled="false"
        android:text="Partisipan2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/partisipan1" />

    <CheckBox
        android:id="@+id/partisipan3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:enabled="false"
        android:text="Partisipan3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/partisipan2" />

    <CheckBox
        android:id="@+id/partisipan4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:enabled="false"
        android:text="Partisipan4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/partisipan3" />

    <CheckBox
        android:id="@+id/partisipan5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:enabled="false"
        android:text="Partisipan5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/partisipan4" />

    <Button
        android:id="@+id/bt_buat_tiket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Buat Tiket"
        android:textAllCaps="false"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>